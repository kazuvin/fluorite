{
	"name": "fluorite",
	"private": true,
	"scripts": {
		"dev:desktop": "pnpm --filter @fluorite/desktop dev",
		"dev:mobile": "pnpm --filter @fluorite/mobile start",
		"build:desktop": "pnpm --filter @fluorite/desktop build",
		"build:core": "pnpm --filter @fluorite/core build",
		"test": "pnpm --filter @fluorite/core test",
		"typecheck": "pnpm -r --parallel run typecheck",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild",
			"unrs-resolver"
		]
	},
	"packageManager": "pnpm@10.28.2",
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"jotai": "^2.17.0"
	}
}
